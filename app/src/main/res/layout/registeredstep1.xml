<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/registered_text"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:textColor="@color/black3"
        android:padding="30dp"
        android:layout_height="wrap_content"
        android:text="欢迎注册"/>

    <RelativeLayout
        android:id="@+id/registered_relative"
        app:layout_constraintTop_toBottomOf="@+id/registered_text"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/lineradbgwhitebg"
        android:layout_height="174dp">

        <TextView
            android:id="@+id/registered_country"
            android:layout_width="match_parent"
            android:padding="12dp"
            android:layout_height="wrap_content"
            style="@style/textstylemiddleblack"
            android:text="中国大陆+86"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mine_righticon"
            android:layout_alignParentRight="true"
            android:paddingTop="12dp"
            android:layout_marginRight="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_below="@+id/registered_country"/>
            />

        <EditText
            android:id="@+id/registered_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edithintstyle"
            android:layout_marginTop="1dp"
            android:padding="12dp"
            android:layout_below="@+id/registered_country"
            android:background="@null"
            android:hint="请输入手机号"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_below="@+id/registered_phone"/>
        <EditText
            android:id="@+id/registered_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edithintstyle"
            android:layout_marginTop="1dp"
            android:padding="12dp"
            android:layout_below="@+id/registered_phone"
            android:background="@null"
            android:hint="请输入动态验证码"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_below="@+id/registered_code"/>
        <EditText
            android:id="@+id/registered_invite_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edithintstyle"
            android:layout_marginTop="1dp"
            android:padding="12dp"
            android:layout_below="@+id/registered_code"
            android:background="@null"
            android:hint="请输入邀请码"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_below="@+id/registered_phone"
            android:layout_alignParentRight="true"
            android:background="@drawable/mainstylelinebg"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/registered_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            style="@style/textstylemiddleblack"
            android:paddingBottom="12dp"
            android:paddingRight="12dp"
            android:text="非必填"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/registered_code"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/registered_text2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="12dp"
            android:background="@color/gray"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/registered_nextstep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/registered_relative"
        android:layout_marginTop="50dp"
        android:background="@drawable/lineradbgmainstyle"
        style="@style/textstylemiddlewhite"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:text="下一步"/>


</android.support.constraint.ConstraintLayout>
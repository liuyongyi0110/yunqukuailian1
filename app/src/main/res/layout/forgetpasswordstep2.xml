<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/forget_passwordstep2_newpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/white"
        style="@style/edithintstyle"
        android:hint="请输入新密码"/>

    <EditText
        android:id="@+id/forget_passwordstep2_againpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/forget_passwordstep2_newpwd"
        android:background="@color/white"
        style="@style/edithintstyle"
        android:hint="再次输入新密码"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/baseline"
        app:layout_constraintTop_toBottomOf="@+id/forget_passwordstep2_newpwd"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/forget_password_step2subbit"
        android:layout_width="match_parent"
        android:background="@drawable/lineradbgmainstyle"
        android:layout_marginTop="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        style="@style/textstylemiddlewhite"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/forget_passwordstep2_againpwd"
        android:layout_height="wrap_content"
        android:text="确认"/>

</android.support.constraint.ConstraintLayout>
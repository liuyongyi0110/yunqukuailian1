<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/registered_step2text"
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:padding="30dp"
        android:textColor="@color/black3"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="设置登录密码"/>

    <RelativeLayout
        android:id="@+id/registered_relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toBottomOf="@+id/registered_step2text"
        android:background="@drawable/lineradbgwhitebg">

        <EditText
            android:id="@+id/registered_passwordnew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="设置登录密码"
            style="@style/edithintstyle"
            android:background="@null"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/registered_passwordnew"
            android:background="@color/gray"/>
        <EditText
            android:id="@+id/registered_passwordagain"
            android:layout_width="match_parent"
            android:layout_below="@+id/registered_passwordnew"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="确认登录密码"
            style="@style/edithintstyle"
            android:background="@null"/>
    </RelativeLayout>


    <TextView
        app:layout_constraintTop_toBottomOf="@+id/registered_relative2"
        android:layout_width="match_parent"
        android:background="@drawable/lineradbgmainstyle"
        style="@style/textstylemiddlewhite"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="完成注册"/>

</android.support.constraint.ConstraintLayout>

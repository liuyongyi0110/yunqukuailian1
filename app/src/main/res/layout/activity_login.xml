<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.yunqukuailian.app.activity.LoginActivity">

    <include layout="@layout/header"/>

    <TextView
        android:id="@+id/logintext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:textSize="24sp"
        android:textColor="@color/black3"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="欢迎登陆"/>

    <RelativeLayout
        android:id="@+id/loginrelativelayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@+id/logintext"
        android:layout_marginTop="50dp"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        android:background="@drawable/lineradbgwhitebg">

        <EditText
            android:id="@+id/loginphone"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号码"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@color/gray"/>

        <EditText
            android:id="@+id/loginpwd"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginphone"
            android:layout_marginTop="1dp"
            android:background="@null"
            android:hint="请输入登陆密码"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="14dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/passwordsee"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/login_forgetpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:padding="8dp"
        android:gravity="right"
        style="@style/textstylemiddlegray"
        app:layout_constraintTop_toBottomOf="@+id/loginrelativelayout"
        android:text="忘记密码"/>

    <TextView
        android:id="@+id/login_login"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:text="登陆"
        style="@style/textstylemiddlewhite"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/lineradbgmainstyle"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        app:layout_constraintTop_toBottomOf="@+id/login_forgetpwd"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/login_registered"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:text="注册账号"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        app:layout_constraintTop_toBottomOf="@+id/login_login"
        android:layout_height="wrap_content" />





</android.support.constraint.ConstraintLayout>
